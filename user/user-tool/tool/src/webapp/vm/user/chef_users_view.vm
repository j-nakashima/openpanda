<link type="text/css" href="/sakai-user-tool/css/sakai-user-tool.css" rel="stylesheet" media="screen" />

<div class="portletBody">
#if($menu)
	#toolbar($menu)
#end
	
		<h3>
			$tlang.getString("usevie.revandmod")
		</h3>
		#if ($alertMessage)
			<div class="alertMessage">
				$tlang.getString("useconrem.alert") $validator.escapeHtml($alertMessage)
			</div>
		#end

		<form name="$form-name" id="userViewForm" action="#toolForm("$action")" method="post">
            <fieldset>
            	<legend>
					$tlang.getString("usevie.use")
				</legend>	
                <div class="shorttext">
                    <label>$tlang.getString("useconrem.useid")</label>
                    $validator.escapeHtml($user.Eid)
                </div>
                <div class="shorttext">
                    <label>$tlang.getString("usecre.lasnam")</label>
                    $validator.escapeHtml($user.LastName)
                </div>
                <div class="shorttext">
                    <label>$tlang.getString("usecre.firnam")</label>
                    $validator.escapeHtml($user.FirstName)
                </div>
                <div class="shorttext">
                    <label>$tlang.getString("usevie.ema")</label>
                    $validator.escapeHtml($user.Email)
                </div>
                <div class="shorttext">
                    <label>$tlang.getString("usecre.typ")</label>
                    $validator.escapeHtml($user.Type)
                </div>
                #if ($allowShowDisplayName)
                <div class="shorttext">
                    <label>$tlang.getString("usevie.displayName")</label>
                    $validator.escapeHtml($user.Properties.getProperty("displayName"))
                </div>
                #end
                #if ($allowShowDisplayName_phonetic)
                <div class="shorttext">
                    <label>$tlang.getString("usevie.displayName_phonetic")</label>
                    $validator.escapeHtml($user.Properties.getProperty("displayName;lang-ja;phonetic"))
                </div>
                #end
                #if ($allowShowDisplayName_en)
                <div class="shorttext">
                    <label>$tlang.getString("usevie.displayName_en")</label>
                    $validator.escapeHtml($user.Properties.getProperty("displayName;lang-en"))
                </div>
                #end
                #if ($allowShowTitle)
                <div class="shorttext">
                    <label>$tlang.getString("usevie.title")</label>
                    $validator.escapeHtml($user.Properties.getProperty("title"))
                </div>
                #end
                #if ($allowShowTitle1)
                    <div class="shorttext">
                        <label>$tlang.getString("usevie.title1")</label>
                        $validator.escapeHtml($user.Properties.getProperty("title1"))
                    </div>
                #end
                #if ($allowShowTitle2)
                    <div class="shorttext">
                        <label>$tlang.getString("usevie.title2")</label>
                        $validator.escapeHtml($user.Properties.getProperty("title2"))
                    </div>
                #end
                #if ($allowShowTitle3)
                    <div class="shorttext">
                        <label>$tlang.getString("usevie.title3")</label>
                        $validator.escapeHtml($user.Properties.getProperty("title3"))
                    </div>
                #end
                #if ($allowShowEmployeeNumber)
                <div class="shorttext">
                    <label>$tlang.getString("usevie.employeeNumber")</label>
                    $validator.escapeHtml($user.Properties.getProperty("employeeNumber"))
                </div>
                #end
                #if ($allowShowAffiliation)
                <div class="shorttext">
                    <label>$tlang.getString("usevie.affiliation")</label>
                    $validator.escapeHtml($user.Properties.getProperty("affiliation"))
                </div>
                #end
                #if ($allowShowDepartment)
                <div class="shorttext">
                    <label>$tlang.getString("usevie.department")</label>
                    $validator.escapeHtml($user.Properties.getProperty("department"))
                </div>
                #end
                #if ($allowShowExternalAffiliation)
                <div class="shorttext">
                    <label>$tlang.getString("usevie.externalAffiliation")</label>
                    $validator.escapeHtml($user.Properties.getProperty("externalAffiliation"))
                </div>
                #end
                #if ($allowShowEnrollment)
                    <div class="shorttext">
                        <label>$tlang.getString("usevie.enrollment")</label>
                        $validator.escapeHtml($user.Properties.getProperty("enrollment"))
                    </div>
                #end

#if($enableEdit)
               	<div class="shorttext">
                    <label>$tlang.getString("disabled")</label>
                    #set($disabled = $user.Properties.getProperty("disabled"))
   					#if ($disabled != 'true')$tlang.getString("false") #else $tlang.getString("true") #end
                </div>
		        <div class="shorttext">
                    <label>$tlang.getString("useedi.creby")</label>
                    $validator.escapeHtml($user.CreatedBy.DisplayName)
                </div>
                <div class="shorttext">
                    <label>$tlang.getString("useedi.cre")</label>
                    $validator.escapeHtml($user.CreatedTime.toStringLocalFull())
                </div>
                <div class="shorttext">
                    <label>$tlang.getString("useedi.modby")</label>
                    $validator.escapeHtml($user.ModifiedBy.DisplayName)
                </div>
                <div class="shorttext">
                    <label>$tlang.getString("useedi.mod")</label>
                    $validator.escapeHtml($user.ModifiedTime.toStringLocalFull())
                </div>
                           
				<div class="act">
					<input type="submit" id="eventSubmit_doModify" name="eventSubmit_doModify" class="active" value="$tlang.getString("usevie.mod2")"  accesskey="s" />
				</div>
#end
				<input type="hidden" id="id" name="id" value="$validator.escapeHtml($user.Id)" />
				<input type="hidden" name="sakai_csrf_token" value="$sakai_csrf_token" />
            </fieldset>
		</form>
	</div>
